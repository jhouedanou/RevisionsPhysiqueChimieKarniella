    <script>
        class MotorController {
            constructor() {
                this.isActive = true;
                this.isCurrentReversed = false;

                // √âl√©ments du moteur
                this.switchButton = document.getElementById('switchButton');
                this.switchStatus = document.getElementById('switch-status');
                this.statusDisplay = document.getElementById('statusDisplay');
                this.switchContainer = document.getElementById('switchContainer');
                this.interrupteur = document.querySelector('.interactive-switch');
                this.propeller = document.getElementById('propeller');

                // √âl√©ments du courant
                this.currentToggle = document.getElementById('currentToggle');
                this.directionLabel = document.getElementById('directionLabel');
                this.poleLeft = document.getElementById('pole-left');
                this.poleRight = document.getElementById('pole-right');
                this.labelLeft = document.getElementById('label-left');
                this.labelRight = document.getElementById('label-right');

                // √âl√©ments des bornes du moteur
                this.motorPoleTop = document.getElementById('motor-pole-top');
                this.motorPoleBottom = document.getElementById('motor-pole-bottom');
                this.motorLabelTop = document.getElementById('motor-label-top');
                this.motorLabelBottom = document.getElementById('motor-label-bottom');

                this.setupEventListeners();
                this.updateUI();
            }

            setupEventListeners() {
                this.switchButton.addEventListener('click', () => this.toggleMotor());
                this.interrupteur.addEventListener('click', () => this.toggleMotor());
                this.currentToggle.addEventListener('click', () => this.toggleCurrent());
            }

            toggleMotor() {
                this.isActive = !this.isActive;
                this.updateUI();
            }

            toggleCurrent() {
                this.isCurrentReversed = !this.isCurrentReversed;
                this.updateUI();
            }

            updateUI() {
                // Mettre √† jour l'√©tat du moteur
                if (this.isActive) {
                    this.switchButton.classList.add('on');
                    this.switchContainer.classList.add('active');
                    this.switchStatus.textContent = 'FERM√â';
                    this.switchStatus.setAttribute('fill', '#4caf50');
                    this.statusDisplay.textContent = '‚úì Moteur ACTIF - Rotation en cours';
                    this.statusDisplay.classList.add('on');
                    this.propeller.style.animationPlayState = 'running';
                } else {
                    this.switchButton.classList.remove('on');
                    this.switchContainer.classList.remove('active');
                    this.switchStatus.textContent = 'OUVERT';
                    this.switchStatus.setAttribute('fill', '#f44336');
                    this.statusDisplay.textContent = '‚úó Moteur INACTIF - Arr√™t√©';
                    this.statusDisplay.classList.remove('on');
                    this.propeller.style.animationPlayState = 'paused';
                }

                // Mettre √† jour le sens de rotation et les bornes
                if (this.isCurrentReversed) {
                    this.currentToggle.classList.add('reversed');
                    this.directionLabel.textContent = 'Invers√© ‚Üí Moteur anti-horaire';

                    // Inverser les bornes de la pile
                    this.poleLeft.setAttribute('fill', '#333');
                    this.labelLeft.textContent = '‚àí';
                    this.labelLeft.setAttribute('fill', '#333');

                    this.poleRight.setAttribute('fill', '#FFD700');
                    this.labelRight.textContent = '+';
                    this.labelRight.setAttribute('fill', '#FF6B6B');

                    // Inverser les bornes du moteur
                    this.motorPoleTop.setAttribute('fill', '#333');
                    this.motorLabelTop.textContent = '‚àí';
                    this.motorLabelTop.setAttribute('fill', '#333');

                    this.motorPoleBottom.setAttribute('fill', '#FFD700');
                    this.motorLabelBottom.textContent = '+';
                    this.motorLabelBottom.setAttribute('fill', '#FF6B6B');

                    // Rotation anti-horaire
                    this.propeller.classList.remove('clockwise');
                    this.propeller.classList.add('counterClockwise');
                } else {
                    this.currentToggle.classList.remove('reversed');
                    this.directionLabel.textContent = 'Normal ‚Üí Moteur horaire';

                    // Bornes normales de la pile
                    this.poleLeft.setAttribute('fill', '#FFD700');
                    this.labelLeft.textContent = '+';
                    this.labelLeft.setAttribute('fill', '#FF6B6B');

                    this.poleRight.setAttribute('fill', '#333');
                    this.labelRight.textContent = '‚àí';
                    this.labelRight.setAttribute('fill', '#333');

                    // Bornes normales du moteur
                    this.motorPoleTop.setAttribute('fill', '#FFD700');
                    this.motorLabelTop.textContent = '+';
                    this.motorLabelTop.setAttribute('fill', '#FF6B6B');

                    this.motorPoleBottom.setAttribute('fill', '#333');
                    this.motorLabelBottom.textContent = '‚àí';
                    this.motorLabelBottom.setAttribute('fill', '#333');

                    // Rotation horaire
                    this.propeller.classList.remove('counterClockwise');
                    this.propeller.classList.add('clockwise');
                }
            }
        }

        // Initialiser le contr√¥leur du moteur
        const motor = new MotorController();
    </script>
