    <script>
        // R√©ponses correctes du quiz
        const quizAnswers = {
            q1: 'b',  // L'interrupteur contr√¥le 1 circuit, le commutateur bascule entre 2
            q2: 'b',  // 1 lampe (l'une OU l'autre)
            q3: 'b',  // 2 positions
            q4: 'a',  // Choisir entre lampe 1 OU lampe 2
            q5: 'b',  // 2 sorties
            q6: 'a',  // Circuit OUVERT au repos
            q7: 'b',  // Sonne quand on appuie
            q8: 'b',  // Circuit FERM√â au repos
            q9: 'b',  // Devient OUVERT quand appuy√©
            q10: 'c', // NO laisse ouvert, NC laisse ferm√©
            q11: 'd', // Lampe allum√©e quand porte ouverte
            q12: 'b', // 2 positions stables
            q13: 'a', // Revient gr√¢ce au ressort
            q14: 'c', // Contact s√©par√©
            q15: 'c'  // NO et NC
        };

        // Fonction pour v√©rifier le quiz
        function submitQuiz() {
            let score = 0;
            let totalQuestions = Object.keys(quizAnswers).length;

            // V√©rifier chaque r√©ponse
            for (let i = 1; i <= totalQuestions; i++) {
                const questionName = 'q' + i;
                const selectedAnswer = document.querySelector(`input[name="${questionName}"]:checked`);
                const feedbackElement = document.getElementById(`feedback-${questionName}`);

                if (!selectedAnswer) {
                    if (feedbackElement) {
                        feedbackElement.innerHTML = '<span style="color: #FF69B4; font-weight: bold;">‚ö†Ô∏è R√©ponse manquante</span>';
                    }
                    continue;
                }

                const isCorrect = selectedAnswer.value === quizAnswers[questionName];

                if (isCorrect) {
                    score++;
                    if (feedbackElement) {
                        feedbackElement.innerHTML = '<span style="color: #27ae60; font-weight: bold;">‚úÖ Correct!</span>';
                    }
                } else {
                    if (feedbackElement) {
                        feedbackElement.innerHTML = '<span style="color: #FF1493; font-weight: bold;">‚ùå Incorrect</span>';
                    }
                }
            }

            // Afficher les r√©sultats
            const resultsDiv = document.getElementById('quiz-results');
            const percentage = Math.round((score / totalQuestions) * 100);

            let resultMessage = `
                <strong>R√©sultat: ${score}/${totalQuestions} (${percentage}%)</strong><br>
            `;

            if (percentage >= 80) {
                resultMessage += '<span style="color: #27ae60;">üéâ Excellent! Vous ma√Ætrisez bien les commandes √©lectriques.</span>';
            } else if (percentage >= 60) {
                resultMessage += '<span style="color: #f39c12;">üëç Bon travail! Continuez √† r√©viser.</span>';
            } else {
                resultMessage += '<span style="color: #FF1493;">üìö √Ä relire! Revisitez le contenu.</span>';
            }

            resultsDiv.innerHTML = resultMessage;
            resultsDiv.style.display = 'block';

            // Scroll vers les r√©sultats
            resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
    </script>
