    <script>
        // Tab switching
        function openTab(evt, tabName) {
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => content.classList.remove('active'));

            const buttons = document.querySelectorAll('.tab-button');
            buttons.forEach(button => button.classList.remove('active'));

            document.getElementById(tabName).classList.add('active');
            evt.currentTarget.classList.add('active');
        }

        // Find divisors
        function findDivisors() {
            const num = parseInt(document.getElementById('divisor-number').value);
            const divisors = [];
            
            for (let i = 1; i <= num; i++) {
                if (num % i === 0) {
                    divisors.push(i);
                }
            }

            document.getElementById('divisors-list').textContent = 
                `Diviseurs de ${num} : ${divisors.join(', ')}`;
            document.getElementById('divisors-count').textContent = 
                `Nombre de diviseurs : ${divisors.length}`;
            document.getElementById('divisors-result').classList.add('show');
        }

        // Test divisibility
        function testDivisibility() {
            const num = parseInt(document.getElementById('divisibility-test').value);
            let results = [];

            // Test divisibility by 2
            if (num % 2 === 0) {
                results.push(`‚úì Divisible par 2 (se termine par ${num % 10})`);
            } else {
                results.push(`‚úó PAS divisible par 2`);
            }

            // Test divisibility by 3
            const sumDigits3 = num.toString().split('').reduce((a, b) => parseInt(a) + parseInt(b), 0);
            if (num % 3 === 0) {
                results.push(`‚úì Divisible par 3 (somme des chiffres = ${sumDigits3})`);
            } else {
                results.push(`‚úó PAS divisible par 3 (somme des chiffres = ${sumDigits3})`);
            }

            // Test divisibility by 5
            if (num % 5 === 0) {
                results.push(`‚úì Divisible par 5 (se termine par ${num % 10})`);
            } else {
                results.push(`‚úó PAS divisible par 5`);
            }

            // Test divisibility by 9
            const sumDigits9 = num.toString().split('').reduce((a, b) => parseInt(a) + parseInt(b), 0);
            if (num % 9 === 0) {
                results.push(`‚úì Divisible par 9 (somme des chiffres = ${sumDigits9})`);
            } else {
                results.push(`‚úó PAS divisible par 9 (somme des chiffres = ${sumDigits9})`);
            }

            // Test divisibility by 10
            if (num % 10 === 0) {
                results.push(`‚úì Divisible par 10 (se termine par 0)`);
            } else {
                results.push(`‚úó PAS divisible par 10`);
            }

            document.getElementById('divisibility-details').innerHTML = results.join('<br>');
            document.getElementById('divisibility-result').classList.add('show');
        }

        // Show solutions
        function showSolution1() {
            document.getElementById('solution1').style.display = 'block';
        }

        function showSolution2() {
            document.getElementById('solution2').style.display = 'block';
        }

        function showSolution3() {
            document.getElementById('solution3').style.display = 'block';
        }
    </script>
