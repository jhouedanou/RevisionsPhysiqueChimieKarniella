    <script src="math-lessons-script.js"></script>
    <script>
        // Variables pour le dessin
        let canvas4 = document.getElementById('drawingCanvas4');
        let ctx4 = canvas4.getContext('2d');
        let isDrawing4 = false;
        let lastX4 = 0;
        let lastY4 = 0;
        let drawingData4 = null;

        // Initialiser le canvas
        if (canvas4) {
            canvas4.addEventListener('mousedown', startDrawing4);
            canvas4.addEventListener('mousemove', draw4);
            canvas4.addEventListener('mouseup', stopDrawing4);
            canvas4.addEventListener('mouseout', stopDrawing4);

            // Support tactile
            canvas4.addEventListener('touchstart', handleTouch4);
            canvas4.addEventListener('touchmove', handleTouch4);
            canvas4.addEventListener('touchend', stopDrawing4);
        }

        function startDrawing4(e) {
            isDrawing4 = true;
            const rect = canvas4.getBoundingClientRect();
            lastX4 = e.clientX - rect.left;
            lastY4 = e.clientY - rect.top;
        }

        function draw4(e) {
            if (!isDrawing4) return;

            const rect = canvas4.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;

            ctx4.strokeStyle = '#FF69B4';
            ctx4.lineWidth = 2;
            ctx4.lineCap = 'round';
            ctx4.lineJoin = 'round';

            ctx4.beginPath();
            ctx4.moveTo(lastX4, lastY4);
            ctx4.lineTo(x, y);
            ctx4.stroke();

            lastX4 = x;
            lastY4 = y;
        }

        function stopDrawing4() {
            isDrawing4 = false;
        }

        function handleTouch4(e) {
            const touch = e.touches[0];
            const rect = canvas4.getBoundingClientRect();

            if (e.type === 'touchstart') {
                lastX4 = touch.clientX - rect.left;
                lastY4 = touch.clientY - rect.top;
                isDrawing4 = true;
            } else if (e.type === 'touchmove') {
                const x = touch.clientX - rect.left;
                const y = touch.clientY - rect.top;

                ctx4.strokeStyle = '#FF69B4';
                ctx4.lineWidth = 2;
                ctx4.lineCap = 'round';
                ctx4.lineJoin = 'round';

                ctx4.beginPath();
                ctx4.moveTo(lastX4, lastY4);
                ctx4.lineTo(x, y);
                ctx4.stroke();

                lastX4 = x;
                lastY4 = y;
            }
            e.preventDefault();
        }

        function clearCanvas4() {
            ctx4.clearRect(0, 0, canvas4.width, canvas4.height);
            document.getElementById('drawing-feedback4').innerHTML = '';
        }

        function saveDrawing4() {
            // Enregistrer les donn√©es du dessin
            drawingData4 = canvas4.toDataURL();
            document.getElementById('drawing-feedback4').innerHTML = '<span style="color: #4caf50;">‚úì Dessin enregistr√© !</span>';
        }

        function submitQuiz(quizId) {
            const answers = {
                q1: 'b',
                q2: 'c',
                q3: 'c',
                q4: 'b',
                q5: 'b',
                q6: 'b'
            };

            let score = 0;
            let totalQuestions = Object.keys(answers).length;

            for (let question in answers) {
                const selected = document.querySelector(`input[name="${question}"]:checked`);
                const feedback = document.getElementById(`feedback-${question}`);

                if (selected) {
                    if (selected.value === answers[question]) {
                        score++;
                        feedback.style.color = '#4caf50';
                        feedback.textContent = '‚úì Correct !';
                    } else {
                        feedback.style.color = '#f44336';
                        feedback.textContent = '‚úó Incorrect';
                    }
                    feedback.style.display = 'block';
                    feedback.style.marginTop = '8px';
                    feedback.style.fontWeight = 'bold';
                } else {
                    feedback.style.color = '#f44336';
                    feedback.textContent = '‚ö† Veuillez s√©lectionner une r√©ponse';
                    feedback.style.display = 'block';
                    feedback.style.marginTop = '8px';
                    feedback.style.fontWeight = 'bold';
                }
            }

            const resultsDiv = document.getElementById('quiz-results');
            const percentage = Math.round((score / totalQuestions) * 100);
            resultsDiv.innerHTML = `<h3>R√©sultats: ${score}/${totalQuestions} (${percentage}%)</h3>`;
            resultsDiv.style.marginTop = '20px';
            resultsDiv.style.padding = '15px';
            resultsDiv.style.backgroundColor = percentage >= 70 ? '#e8f5e9' : '#fff3e0';
            resultsDiv.style.border = `3px solid ${percentage >= 70 ? '#4caf50' : '#ff9800'}`;
            resultsDiv.style.borderRadius = '8px';
            resultsDiv.style.display = 'block';
        }
    </script>
