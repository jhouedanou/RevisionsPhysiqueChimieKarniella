<script src="math-lessons-script.js"></script>
<script>
        // Variables pour le dessin
        let canvas6 = document.getElementById('drawingCanvas6');
        let ctx6 = canvas6.getContext('2d');
        let isDrawing6 = false;
        let lastX6 = 0;
        let lastY6 = 0;
        let drawingData6 = null;

        // Initialiser le canvas
        if (canvas6) {
            canvas6.addEventListener('mousedown', startDrawing6);
            canvas6.addEventListener('mousemove', draw6);
            canvas6.addEventListener('mouseup', stopDrawing6);
            canvas6.addEventListener('mouseout', stopDrawing6);

            // Support tactile
            canvas6.addEventListener('touchstart', handleTouch6);
            canvas6.addEventListener('touchmove', handleTouch6);
            canvas6.addEventListener('touchend', stopDrawing6);
        }

        function startDrawing6(e) {
            isDrawing6 = true;
            const rect = canvas6.getBoundingClientRect();
            lastX6 = e.clientX - rect.left;
            lastY6 = e.clientY - rect.top;
        }

        function draw6(e) {
            if (!isDrawing6) return;

            const rect = canvas6.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;

            ctx6.strokeStyle = '#FF69B4';
            ctx6.lineWidth = 2;
            ctx6.lineCap = 'round';
            ctx6.lineJoin = 'round';

            ctx6.beginPath();
            ctx6.moveTo(lastX6, lastY6);
            ctx6.lineTo(x, y);
            ctx6.stroke();

            lastX6 = x;
            lastY6 = y;
        }

        function stopDrawing6() {
            isDrawing6 = false;
        }

        function handleTouch6(e) {
            const touch = e.touches[0];
            const rect = canvas6.getBoundingClientRect();

            if (e.type === 'touchstart') {
                lastX6 = touch.clientX - rect.left;
                lastY6 = touch.clientY - rect.top;
                isDrawing6 = true;
            } else if (e.type === 'touchmove') {
                const x = touch.clientX - rect.left;
                const y = touch.clientY - rect.top;

                ctx6.strokeStyle = '#FF69B4';
                ctx6.lineWidth = 2;
                ctx6.lineCap = 'round';
                ctx6.lineJoin = 'round';

                ctx6.beginPath();
                ctx6.moveTo(lastX6, lastY6);
                ctx6.lineTo(x, y);
                ctx6.stroke();

                lastX6 = x;
                lastY6 = y;
            }
            e.preventDefault();
        }

        function clearCanvas6() {
            ctx6.clearRect(0, 0, canvas6.width, canvas6.height);
            document.getElementById('drawing-feedback6').innerHTML = '';
        }

        function saveDrawing6() {
            // Enregistrer les donn√©es du dessin
            drawingData6 = canvas6.toDataURL();
            document.getElementById('drawing-feedback6').innerHTML = '<span style="color: #4caf50;">‚úì Dessin enregistr√© !</span>';
        }

        function submitQuiz(quizId) {
            const answers = {
                q1: 'b',
                q2: 'b',
                q3: 'a',
                q4: 'b',
                q5: 'a',
                q6: 'b'
            };

            let score = 0;
            let totalQuestions = Object.keys(answers).length;

            for (let question in answers) {
                const selected = document.querySelector(`input[name="${question}"]:checked`);
                const feedback = document.getElementById(`feedback-${question}`);

                if (selected) {
                    if (selected.value === answers[question]) {
                        score++;
                        feedback.style.color = '#4caf50';
                        feedback.textContent = '‚úì Correct !';
                    } else {
                        feedback.style.color = '#f44336';
                        feedback.textContent = '‚úó Incorrect';
                    }
                    feedback.style.display = 'block';
                    feedback.style.marginTop = '8px';
                    feedback.style.fontWeight = 'bold';
                } else {
                    feedback.style.color = '#f44336';
                    feedback.textContent = '‚ö† Veuillez s√©lectionner une r√©ponse';
                    feedback.style.display = 'block';
                    feedback.style.marginTop = '8px';
                    feedback.style.fontWeight = 'bold';
                }
            }

            const resultsDiv = document.getElementById('quiz-results');
            const percentage = Math.round((score / totalQuestions) * 100);
            resultsDiv.innerHTML = `<h3>R√©sultats: ${score}/${totalQuestions} (${percentage}%)</h3>`;
            resultsDiv.style.marginTop = '20px';
            resultsDiv.style.padding = '15px';
            resultsDiv.style.backgroundColor = percentage >= 70 ? '#e8f5e9' : '#fff3e0';
            resultsDiv.style.border = `3px solid ${percentage >= 70 ? '#4caf50' : '#ff9800'}`;
            resultsDiv.style.borderRadius = '8px';
            resultsDiv.style.display = 'block';
        }
    </script>

    <!-- Section Quiz Component -->
    <script src="js/section-quiz.js"></script>
    <script>
        // Load quiz questions from JSON
        fetch('data/section-questions.json')
            .then(response => response.json())
            .then(data => {
                const lessonQuestions = data['maths-lecon-6-proprietes'];
                
                if (!lessonQuestions) {
                    console.warn('No questions found for lesson: maths-lecon-6-proprietes');
                    return;
                }
                
                // Initialize quizzes for each tab
                if (lessonQuestions['tab1']) {
                    initSectionQuiz('quiz-tab1', lessonQuestions['tab1']);
                }
                
                if (lessonQuestions['tab2']) {
                    initSectionQuiz('quiz-tab2', lessonQuestions['tab2']);
                }
                
            })
            .catch(error => {
                console.error('Erreur chargement questions:', error);
            });
    </script>
