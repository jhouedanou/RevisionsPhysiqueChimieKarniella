    <script>
        // Quiz answers and validation
        const quizAnswers = {
            q1: 'a', // Science du pass√©
            q2: 'a', // 4 types de sources
            q3: 'a', // G√©ographie d√©finition
            q4: 'a', // Montagne
            q5: 'a'  // Diff√©rence physique/humaine
        };

        function submitQuiz() {
            let score = 0;
            let totalQuestions = Object.keys(quizAnswers).length;
            let answers = [];

            // Check each answer
            for (let i = 1; i <= totalQuestions; i++) {
                const questionName = 'q' + i;
                const selectedAnswer = document.querySelector(`input[name="${questionName}"]:checked`);
                const feedbackElement = document.getElementById(`feedback-${questionName}`);

                if (!selectedAnswer) {
                    if (feedbackElement) {
                        feedbackElement.innerHTML = '<span style="color: #ff9800; font-weight: bold;">‚ö†Ô∏è Tu as oubli√© de r√©pondre !</span>';
                    }
                    answers.push(`Question ${i}: Pas de r√©ponse`);
                    continue;
                }

                const isCorrect = selectedAnswer.value === quizAnswers[questionName];

                if (isCorrect) {
                    score++;
                    if (feedbackElement) {
                        feedbackElement.innerHTML = '<span style="color: #27ae60; font-weight: bold;">‚úÖ Bravo !</span>';
                    }
                    answers.push(`Question ${i}: Correcte`);
                } else {
                    if (feedbackElement) {
                        feedbackElement.innerHTML = '<span style="color: #e74c3c; font-weight: bold;">‚ùå Pas tout √† fait...</span>';
                    }
                    answers.push(`Question ${i}: Incorrecte`);
                }
            }

            // Display results
            const resultsDiv = document.getElementById('quiz-results');
            const percentage = Math.round((score / totalQuestions) * 100);

            let resultMessage = `
                <strong>Ton r√©sultat: ${score}/${totalQuestions} (${percentage}%)</strong><br>
            `;

            if (percentage >= 80) {
                resultMessage += '<span style="color: #ffd700;">üéâ Super ! Tu connais super bien l\'histoire et la g√©o ! üåü</span>';
            } else if (percentage >= 60) {
                resultMessage += '<span style="color: #fff;">üëç C\'est bien ! Continue √† apprendre ! üí™</span>';
            } else {
                resultMessage += '<span style="color: #fff;">üìö Pas de souci ! Relis la le√ßon et r√©essaie ! üíñ</span>';
            }

            resultsDiv.innerHTML = resultMessage;
            resultsDiv.style.display = 'block';

            // Scroll to results
            resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

            // Envoyer les r√©sultats par email
            sendQuizResults('Histoire-G√©ographie', score, totalQuestions, percentage, answers);
        }

        // Fonction pour envoyer les r√©sultats par email
        function sendQuizResults(quizName, score, total, percentage, answers) {
            const templateParams = {
                to_email: 'jhouedanou@gmail.com',
                quiz_name: quizName,
                score: score,
                total: total,
                percentage: percentage,
                answers_detail: answers.join('\n'),
                date: new Date().toLocaleDateString('fr-FR', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                })
            };

            emailjs.send('service_6bxomgg', 'template_wnq8xtl', templateParams)
                .then(function(response) {
                    console.log('Email envoy√© !', response.status, response.text);
                }, function(error) {
                    console.log('Erreur d\'envoi...', error);
                });
        }

        // Tab switching
        function openTab(evt, tabName) {
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => content.classList.remove('active'));

            const buttons = document.querySelectorAll('.tab-button');
            buttons.forEach(button => button.classList.remove('active'));

            document.getElementById(tabName).classList.add('active');
            evt.currentTarget.classList.add('active');
        }

        // Navigate to a specific tab programmatically
        function navigateToTab(tabName) {
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => content.classList.remove('active'));

            const buttons = document.querySelectorAll('.tab-button');
            buttons.forEach(button => button.classList.remove('active'));

            document.getElementById(tabName).classList.add('active');
            
            // Find and activate the corresponding tab button
            const targetButton = Array.from(buttons).find(button => 
                button.getAttribute('onclick').includes(tabName)
            );
            if (targetButton) {
                targetButton.classList.add('active');
            }

            // Scroll to top of content
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
